<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--<attr name="titleText" format="string" />-->
    <!--<attr name="titleTextColor" format="color" />-->
    <!--<attr name="titleTextSize" format="dimension" />-->

    <!-- 初识演练 -->
    <declare-styleable name="CustomView">
        <attr name="titleText" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="isEnabled" format="boolean" />
        <attr name="type">
            <enum name="first" value="0" />
            <enum name="second" value="1" />
        </attr>
    </declare-styleable>

    <!-- 带图片的文本 -->
    <declare-styleable name="CusImgView">
        <attr name="img" format="reference" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="imgScaleType">
            <enum name="fitXY" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <!-- 环形控件 -->
    <declare-styleable name="AnnularView">
        <attr name="firstColor" format="color" />
        <attr name="secondColor" format="color" />
        <attr name="anWidth" format="dimension" />
        <attr name="speed" format="integer" />
    </declare-styleable>

    <!-- 音量控件 -->
    <declare-styleable name="SoundView">
        <attr name="darkColor" format="color" />
        <attr name="lightColor" format="color" />
        <attr name="circleWidth" format="dimension" />
        <attr name="dotCount" format="integer" />
        <attr name="splitSize" format="dimension" />
        <attr name="bg" format="reference" />
    </declare-styleable>

</resources>